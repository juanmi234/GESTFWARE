<h1>Gestión de Escenarios</h1>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear Escenarios</a>
    </p>

    <table class="table">
        <thead>
            <tr><!--Muestra unos pocos datos-->
                <th>Nombre</th>
                <th>Espectadores</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var es in Model.Escenarios)
            {
                <tr>
                    <td>@es.Nombre</td>
                    <td>@es.Espectadores</td>
                    <td>@es.Tipo</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@es.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@es.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@es.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>